FROM python:3.13.7-slim
LABEL org.opencontainers.image.source=https://github.com/con/vandermeerlab-to-bids
LABEL org.opencontainers.image.description="A docker image for the van der Meer lab to BIDS project."

ADD ./ vandermeerlab-to-bids
RUN cd vandermeerlab-to-bids && pip install .
CMD ["python -m"]
